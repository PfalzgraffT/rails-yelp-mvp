<h1>All restaurants</h1>


  <% @restaurants.each do |restaurant| %>
    <ul class="card">
      <li><%= link_to restaurant.name, restaurant_path(restaurant) %> (<%= restaurant.category %>) - <%= restaurant.address %> : <%= restaurant.phone_number %></li>
    </ul>

  <% end %>

<%= link_to 'Add a new restaurant', new_restaurant_path, class: "link" %>
